{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Research</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Nameen</th>
                <td>{{ entity.nameEn }}</td>
            </tr>
            <tr>
                <th>Concept</th>
                <td>{{ entity.concept }}</td>
            </tr>
            <tr>
                <th>Concepten</th>
                <td>{{ entity.conceptEn }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('research') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('research_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
